<% provide(:title, "Users") %>

<div class="well">

  <h1>Users <span class="badge"><%= @users.count %></span></h1>

  <%= will_paginate %>

  <ul class="media-list">
    <% @users.each do |user| %>
      <li class="media">
        <p class="pull-left">
          <%= gravatar_for user%>
        </p>
        <div class="media-body">
          <h4 class="media-heading"><%= user.name %></h4>
          <%= render 'friend_form', user: user %>
        </div>
      </li>
    <% end %>
  </ul>

  <%= will_paginate %>

</div>
